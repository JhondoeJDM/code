import turtle as trtl
trtl.speed(0)
trtl.bgcolor("black")
Userinputhue = int(input("input hue"))
for i in range(250):
    
    colorR =+ 50
    colorG =+ 50
    colorB =+ 50
    trtl.pencolor(colorR, colorB, colorG)
    trtl.circle(5-i, 100)
    trtl.lt(80)
    trtl.circle(5-i, 100)
    trtl.rt(80)
    trtl.circle(5-i, 100)
    
wn = trtl.Screen()
wn.mainloop()
